<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shah_faisal"/>

    <TextView
        android:id="@+id/locationName"
        style="@style/textStyle"
        android:layout_above="@+id/locationAddress"
        android:text="@string/shah_faisal"
        android:textSize="@dimen/locationName"/>

    <TextView
        android:id="@+id/locationAddress"
        style="@style/textStyle"
        android:layout_alignBottom="@+id/locationImage"
        android:text="@string/shah_faisal_address"
        android:textSize="@dimen/locationAddress"/>
</RelativeLayout>
